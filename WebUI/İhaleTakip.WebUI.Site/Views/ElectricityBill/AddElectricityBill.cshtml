@using İhaleTakip.Model
@model ElectricityBill

<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <form action="/ElectricityBill/AddElectricityBill" method="post">
            <div class="mb-3 text-center border-bottom">
                <h3>Yeni Elektrik Faturası Kaydı</h3>
            </div>
            <div class="mb-3">
                <label class="form-label">Tesisat Numarası</label>
                <input class="form-control" name="InstallationNumber" type="text" value="@ViewBag.SelectedInstallationNumber" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Dönem</label>
                <input class="form-control" name="Period" type="month" value="@ViewBag.DateText" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Harcanan Miktarı</label>
                <input class="form-control comma-numbers" name="Amount" type="text" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Borç</label>
                <input class="form-control comma-numbers" name="Debt" type="text" required />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary w-100">Ekle</button>
            </div>
        </form>
    </div>
    <div class="col-4"></div>
</div>
